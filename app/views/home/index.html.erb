<script>
  var email = "jdoe@example.com";

  function convert_to_array(string) {
      return Uint8Array.from(atob(string), c => c.charCodeAt(0));
    };

  async function setup(identity_id, challenge) {
    let isUVPAA = await PublicKeyCredential.isUserVerifyingPlatformAuthenticatorAvailable();
    const id = convert_to_array(identity_id);

    if (isUVPAA === true) {
      navigator.credentials.create({
        publicKey: {
          rp: {
            name: "test-fido",
            id: "localhost",
          },
          user: {
            id: id,
            displayName: email,
            name: email,
          },
          challenge: challenge,
          pubKeyCredParams: [{
            type: "public-key",
            alg: -7
          }],
          authenticatorSelection: {
            authenticatorAttachment: "platform",
            userVerification: "required"
          }
        }
      }).then(async function (newCredentialInfo) {
          debugger
          const decodedClientData = window.btoa(String.fromCharCode(...Array.from(new Uint8Array(newCredentialInfo.response.clientDataJSON))));
          const decodedAttestationObject = window.btoa(String.fromCharCode(...Array.from(new Uint8Array(newCredentialInfo.response.attestationObject))));

          const data = {
              identity: {
                  public_key_id: newCredentialInfo.id,
                  attestation_object: decodedAttestationObject,
                  client_data: decodedClientData
                }
            };
          const response = await fetch(
              `/identities/${identity_id}.json`,
              {
                  method: "PUT",
                    mode: "cors",
                    cache: "no-cache",
                    credentials: "same-origin",
                    headers: {
                        "Content-Type": "application/json"
                      },
                    body: JSON.stringify(data)
                }
            );

      }).catch(function (err) {
        alert(err);
      });
    } else {
      alert("No FIDO support");
    }
  };

  async function register() {
      const data = { uid: email };
      const response = await fetch(
          "/identities.json",
            {
              method: "POST",
              mode: "cors",
              cache: "no-cache",
              credentials: "same-origin",
              headers: {
                  "Content-Type": "application/json"
                },
              body: JSON.stringify(data)
            }
        );

      const response_data = await response.json()
      const challengeArrayBuffer = convert_to_array(response_data['challenge']).buffer;
      return setup(response_data["identity"]["id"], challengeArrayBuffer);
  };

    async function authenticate(identityId) {
        const identityResponse = await fetch(
            `/identities/${identityId}.json`,
            {
                method: 'GET',
                mode: 'cors',
                cache: "no-cache",
                credentials: "same-origin",
                headers: {
                    "Content-Type": "application/json"
                  }
              }
          )

        const identity = await identityResponse.json();

        console.log(identity);
        const publicKeyCredentialRequestOptions = {
            challenge: convert_to_array(identity['challenge']),
            allowCredentials: [{
                id: convert_to_array(identity['identity']['credential_id']),
                type: 'public-key',
                transports: ['platform'],
              }],
            timeout: 60000,
          }

        const assertion = await navigator.credentials.get({
            publicKey: publicKeyCredentialRequestOptions
          });

        console.log(assertion)
      };
</script>

<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<form>
  <button onclick="register()">Register</button>

  <%- @identities.each do |identity| %>
    <button onclick="authenticate(<%= identity.id %>)">Authenticate <%= identity.id %></button>
  <%- end %>
</form>

